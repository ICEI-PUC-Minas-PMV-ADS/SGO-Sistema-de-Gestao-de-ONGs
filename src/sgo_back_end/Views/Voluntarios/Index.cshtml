@model IEnumerable<sgo_back_end.Models.Voluntario>

@{
    ViewData["Title"] = "Listagem de Voluntários";
}

<h1 class="lista-voluntario__titulo">Listagem de Voluntários</h1>

<section class="lista-voluntario-container">
    <table class="voluntario__tabela" id="filtro_pesquisa">
        <thead>
            <tr class="voluntario__tabela-header">
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Funcao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Disponivel)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
 
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="voluntarios-cadastradas">
                    <td class="item">
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td class="item">
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td class="item">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="item">
                        @Html.DisplayFor(modelItem => item.Funcao)
                    </td>
                    <td class="item">
                        @Html.DisplayFor(modelItem => item.Disponivel)
                    </td>
                    <td class="item">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="voluntario__botao-editar">
                            <img src="~/img/botão-editar.png" alt="Ícone de editar" />
                            Editar
                        </a>
                    </td>
                    <td class="item">
                        <a asp-action="Details" asp-route-id="@item.Id" class="voluntario__botao-editar">
                            <img src="~/img/botão-detalhes-lista.png" alt="Ícone de detalhes" />
                            Detalhes
                        </a>
                    </td>
                    <td class="item">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="voluntario__botao-editar">
                            <img src="~/img/botão-excluir-lista.png" alt="Ícone de deletar" />
                            Deletar
                        </a>
                    </td>

                </tr>
            }
        </tbody>
        
    </table>
</section>