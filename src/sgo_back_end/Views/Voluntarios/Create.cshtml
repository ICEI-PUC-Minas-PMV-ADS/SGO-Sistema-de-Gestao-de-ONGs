@model sgo_back_end.Models.Voluntario

@{
    ViewData["Title"] = "Cadastro de Voluntário";
}

<h1 class="cadastro-voluntario__titulo">Cadastro de Voluntário</h1>

<form asp-action="Create" class="formulario-voluntario">
    <div asp-validation-summary="ModelOnly"></div>
    <label asp-for="Nome">Nome*</label>
    <input asp-for="Nome" type="text" class="voluntario__input-padrao" required>
    <span asp-validation-for="Nome" class="texto-validacao"></span>

    <label asp-for="Email">E-mail *</label>
    <input asp-for="Email" type="email" class="voluntario__input-padrao" required placeholder="exemplo@gmail.com">
    <span asp-validation-for="Email" class="texto-validacao"></span>

    <label asp-for="Telefone" for="telefone">Telefone *</label>
    <input asp-for="Telefone" type="tel" class="voluntario__input-padrao" required placeholder="(99) 99999-9999">
    <span asp-validation-for="Telefone" class="texto-validacao"></span>

    <div class="voluntario__seletores-div">
        <fieldset class="voluntario__seletores">
            <legend asp-for="Funcao">Função *</legend>
            <select asp-for="Funcao" asp-items="Html.GetEnumSelectList<tipoFuncao>()" required class="voluntario__seletor">
                <option value="" disabled selected>Selecionar</option>
            </select>
            <span asp-validation-for="Funcao" class="texto-validacao"></span>
        </fieldset>

        <fieldset class="voluntario__seletores disponivel">
            <legend asp-for="Disponivel">Disponível esse mês *</legend>
            <select asp-for="Disponivel" asp-items="Html.GetEnumSelectList<estaDisponivel>()" required class="voluntario__seletor">
                <option value="" disabled selected>Selecionar</option>
            </select>
            <span asp-validation-for="Disponivel" class="texto-validacao"></span>
        </fieldset>
    </div>

    <h2 class="voluntario__preenchimento-obrigatorio">* Campos de preenchimento obrigatório</h2>

    <button type="submit" class="voluntario__cadastrar botão-rosa_hover">
        <img src="~/img/botão-cadastrar.png" alt="Ícone de cadastrar" />
        Cadastrar
    </button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

