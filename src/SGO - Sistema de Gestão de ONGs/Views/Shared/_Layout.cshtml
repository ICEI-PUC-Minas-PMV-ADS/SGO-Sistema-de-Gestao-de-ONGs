<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGO - Sistema de Gestão de ONGs</title>

    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/cabecalho.css">
    <link rel="stylesheet" href="~/css/navbar.css">
    <link rel="stylesheet" href="~/css/rodape.css">

    <link rel="stylesheet" href="~/SGO___Sistema_de_Gestão_de_ONGs.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="cabecalho">
        <div class="cabecalho__menu">
            <button class="cabecalho__btn-abrir-navbar">
                <img src="~/img/abrir-navbar.png" alt="">
            </button>
            <img class="cabecalho__logo-sgo" src="~/img/logo-sgo.png" alt="">
        </div>
        <button class="cabecalho__btn-sair">
            <img class="cabecalho__btn-sair-icone" src="~/img/sair-header.png" alt="">Sair
        </button>
    </header>
    <dialog id="navbar-modal">
        <nav class="navbar">
            <button class="navbar__btn-fechar-navbar">
                <img src="~/img/fechar-navbar.png" alt="">
            </button>
            <ul class="navbar__lista">
                <li>
                    <img src="~/img/logo-navbar-domSolidário.png" alt="">
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Home"><img src="~/img/home-navbar.png" alt="">Home</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="CadastroVoluntario"><img src="~/img/cadastro-voluntário-navbar.png" alt="">Cadastrar Voluntário</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="ListaVoluntario"><img src="~/img/listas-navbar.png" alt="">Lista de Voluntários</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="CadastroDoador"><img src="~/img/cadastro-doador-navbar.png" alt="">Cadastrar Doadores</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="ListaDoador"><img src="~/img/listas-navbar.png" alt="">Lista de Doadores</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Suporte"><img src="~/img/suporte-navbar.png" alt="">Suporte</a>
                </li>
                <li>
                    <button class="navbar__btn-sair">
                        <img class="navbar__btn-sair-icone" src="./img/sair-navbar.png" alt="">Sair
                    </button>
                </li>
            </ul>
        </nav>
    </dialog>
        <main>
            @RenderBody()
        </main>

    <footer class="rodape">
        <div>
            <p class="rodape__texto">
                <strong>Desenvolvido pela Equipe 6</strong><br />
                Análise e Desenvolvimento de Sistemas - Eixo 2 | PUC Minas
            </p>
            <img class="rodape__logo-puc" src="/img/logo-puc.png" alt="">
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
