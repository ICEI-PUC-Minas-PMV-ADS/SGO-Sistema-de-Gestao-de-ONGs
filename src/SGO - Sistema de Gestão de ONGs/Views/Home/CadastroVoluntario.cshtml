@{
    ViewData["Title"] = "Cadastro de Voluntário";
}



	<h1 class="titulo">Cadastro de Voluntário</h1>

	<form class="formulario">
				<label for="nome">Nome*</label>
				<input type="text" id="nome" class="input-padrao" required>

				<label for="email">E-mail</label>
				<input type="email" id="email" class="input-padrao" required placeholder="exemplo@gmail.com">

				<label for="telefone">Telefone</label>
				<input type="tel" id="telefone" class="input-padrao" required placeholder="(99) 99999-9999">

				<div id="seletores">

					<fieldset>
						<legend>Função *</legend>
						<select required class="seletor">
							<option value="" disabled selected>Selecionar</option>
							<option>Voluntário</option>
							<option>Doador</option>
						</select>
					</fieldset>


					<fieldset>
						<legend>Disponível esse mês *</legend>
						<select required class="seletor">
							<option value="" disabled selected>Selecionar</option>
							<option>Sim</option>
							<option>Não</option>
						</select>
					</fieldset>

				</div>

				

				<h2 id="preenchimento-obrigatorio">* Campos de preenchimento obrigatório</h2>

				
					<input type="submit" value="Cadastrar"  class="cadastrar">
					<!-- resolver esse problema da imagem no input -->
				

			</form>


